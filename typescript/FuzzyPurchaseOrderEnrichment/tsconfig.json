{
    "compilerOptions": {
        "allowJs": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "lib": ["es2016", "es2017", "esnext.asynciterable", "es2019"],
        "incremental": true,
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "transpileOnly": true
    }
}